<div class="pixel-bg user-layout bg-violet-900 text-slate-100 rounded-2xl drop-shadow-lg p-4 rounded-tl-[108px]">
  <div class="user-left-panel flex flex-col gap-4">
    <%= render 'profile_card' %>
  </div>
  <div class="user-content">
    <div class="user-content-top mb-4">
      <h2 class="user-username text-3xl font-semibold text-slate-300 drop-shadow-md"><%= @user.display_name %></h2>
      <% if current_user %>
        <%= render 'relationship_bar', friend_id: @user.id %>
      <% end %>
    </div>
    <%= turbo_frame_tag :posts, src: user_posts_path(@user) %>
  </div>
  <div class="user-right-panel flex flex-col gap-4">
    <%= turbo_frame_tag "user-game-bar", src: user_games_path(@user) %>
  </div>
</div>
