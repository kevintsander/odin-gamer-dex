<%= turbo_frame_tag game do %>
  <div class="bg-slate-100 text-slate-900 text-sm rounded drop-shadow-lg px-2 py-1 flex gap-1 items-center justify-between overflow-hidden">
    <p><%= game.name %></p>
    <% if user == current_user %>
      <%= link_to user_game_url(user, game), data: { turbo_method: :delete } do %>
        <%= inline_svg_tag 'delete.svg', size: '16*16', class: 'stroke-violet-500 hover:stroke-red-600 hover:fill-red-200' %>
      <% end %>
    <% end %>
  </div>
<% end %>
