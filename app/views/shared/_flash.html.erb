<%= turbo_frame_tag 'flash', class: 'mx-auto' do %>
  <% if flash[:alert] %>
    <div class="w-fit mx-auto my-4 px-8 py-4 border border-red-600 bg-red-300 text-red-600 rounded">
      <% if flash[:alert].respond_to?(:each) %>
        <ol>
          <% flash[:alert].each do |error| %>
            <li><%= error %></li>
          <% end %>
        </ol>
      <% else %>
        <p><%= flash[:alert] %></p>
      <% end %>
    </div>
  <% end %>
<% end %>
