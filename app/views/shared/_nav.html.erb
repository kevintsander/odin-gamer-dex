<nav class="items-center justify-between bg-slate-900 px-6 py-3 drop-shadow-lg flex relative z-20" role="navigation" aria-label="main navigation">
  <%= render 'shared/logo' %>
  <div class="navbar-end">
    <div class="navbar-item">
      <div class="user-nav">
        <% if current_user %>
          <%= link_to user_path(current_user), class: "flex items-center gap-4" do %>
            <% if current_user.avatar.attached? %>
              <%= image_tag current_user.avatar.variant(resize_to_fill: [50, nil]), class: "rounded-full" %>
            <% end %>
            <span class="welcome">Hi, <%= current_user.display_name %></span>
          <% end %>
        </span>

        <%= render 'shared/nav_friends' %>
        <%= link_to "Profile", edit_user_registration_path, class: "btn btn-nav" %>
        <%= link_to "Logout", destroy_user_session_path, data: { turbo_method: :delete }, class: "btn btn-nav" %>
      <% else %>
        <%= link_to "Sign Up", new_user_registration_path, class: "btn btn-nav" %>
        <%= link_to "Login", new_user_session_path, class: "btn btn-nav" %>
      <% end %>
    </div>
  </div>
</div>
</nav>
