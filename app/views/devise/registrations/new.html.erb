<div class="pixel-bg w-1/3 m-auto bg-violet-900 text-slate-100 rounded-2xl shadow-lg shadow-slate-800 py-8 flex flex-col gap-4 items-center">
  <div class="w-2/3 flex flex-col gap-2">
    <h2 class="font-digital text-3xl text-lime-300 font-semibold">Sign Up</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "flex flex-col gap-2" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :username, class: "font-semibold" %><br>
        <%= f.text_field :username, autofocus: true, class: "w-full input-main" %>
      </div>

      <div class="field">
        <%= f.label :email, class: "font-semibold" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full input-main" %>
      </div>

      <div class="field">
        <%= f.label :password, class: "font-semibold" %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "w-full input-main" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, class: "font-semibold" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full input-main" %>
      </div>

      <div class="actions mt-4">
        <%= f.submit "Sign up", class: "w-full border-2 border-lime-300 text-lime-300 font-semibold hover:bg-lime-200 hover:text-lime-600 px-4 py-1 rounded" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
