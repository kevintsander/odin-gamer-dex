<div class="flex flex-col gap-1 mt-2">
  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%= link_to "Forgot your password?", new_password_path(resource_name), class: "link-main" %><br />
  <% end %>

  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: "link-main" %><br />
  <% end %>

  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), class: "link-main" %><br />
  <% end %>

  <%- if devise_mapping.omniauthable? %>
    <%- resource_class.omniauth_providers.each do |provider| %>
      <% case provider %>
      <% when :twitter %>
      <%= button_to omniauth_authorize_path(resource_name, provider), method: :post, data: { turbo: 'false' }, class: "btn btn-main" do %> <%# use button and disable turbo to avoid CORS error for omniauth%>
        <p class="flex gap-2"><%= image_tag 'twitter-logo-blue.svg', size: '24x24' %>Sign in with Twitter</p>
      <% end %>
    <% end %>
  <% end %>
  <%# <%= link_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), data: { turbo_method: :post } %>

<% end %>
</div>
