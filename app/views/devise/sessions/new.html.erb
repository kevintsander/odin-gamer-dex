<div class="pixel-bg w-1/3 min-w-[400px] m-auto bg-violet-900 text-slate-100 rounded-2xl shadow-lg shadow-slate-800 py-8 flex flex-col gap-4 items-center">
  <div class="w-2/3 flex flex-col gap-2">
    <h2 class="font-digital text-3xl text-lime-300 font-semibold">Log In</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "flex flex-col gap-2" }) do |f| %>
      <div class="field">
        <%= f.label :username, class: "font-semibold" %><br />
        <%= f.text_field :username, autofocus: true, autocomplete: "username", class: "w-full input-main" %>
      </div>

      <div class="field">
        <%= f.label :password, class: "font-semibold" %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: "w-full input-main" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, class: "font-semibold" %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Log in", class: "w-full border-2 border-lime-300 text-lime-300 font-semibold hover:bg-lime-200 hover:text-lime-600 px-4 py-1 rounded" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
