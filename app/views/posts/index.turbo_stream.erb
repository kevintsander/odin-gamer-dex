<%= turbo_stream.append "posts-container" do %>
  <%= render @posts, user: @user %>
<% end %>
<% if @pagy.next.present? %>
  <%= turbo_stream.replace "pagination" do %>
    <%= turbo_frame_tag "pagination", src: user_posts_path(@user, page: @pagy.next, format: :turbo_stream), loading: :lazy %>
  <% end %>
<% else %>
  <%= turbo_stream.replace "pagination" %>
<% end%>
